ENV=dev
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/pmd
REDIS_URL=redis://redis:6379/0

# Polymarket adapter
POLYMARKET_BASE_URL=https://<fill-me>
POLY_LIMIT=100
POLY_PAGE_LIMIT=100
POLY_MAX_EVENTS=None
POLY_MAX_PAGES=100
POLY_START_OFFSET=0
POLY_ORDER=
POLY_ASCENDING=
POLY_USE_SERVER_FILTERS=true
POLY_LIQUIDITY_MIN=None
POLY_VOLUME_MIN=None
POLY_USE_GLOBAL_MINIMUMS=true
INGEST_INTERVAL_SECONDS=300
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE_HOUR_UTC=3
SNAPSHOT_RETENTION_DAYS=7
ALERT_RETENTION_DAYS=30
DELIVERY_RETENTION_DAYS=30

# Scoring
MIN_LIQUIDITY=1000
MIN_VOLUME_24H=1000
MIN_PRICE_THRESHOLD=0.02
MIN_ABS_MOVE=0.01
FLOOR_PRICE=0.05
WINDOW_MINUTES=60
ALERT_COOLDOWN_MINUTES=30
DIGEST_WINDOW_MINUTES=60

# Alert tiers + digest defaults
STRONG_ABS_MOVE_THRESHOLD=0.02
STRONG_MIN_LIQUIDITY=5000
STRONG_MIN_VOLUME_24H=5000
MEDIUM_MOVE_THRESHOLD=0.05
MEDIUM_ABS_MOVE_THRESHOLD=0.01
MEDIUM_MIN_LIQUIDITY=1000
MEDIUM_MIN_VOLUME_24H=1000
MAX_STRONG_ALERTS=5
MAX_MEDIUM_ALERTS=3

# Telegram
TELEGRAM_BOT_TOKEN=

# Admin
ADMIN_API_KEY=

# Global defaults for user preferences
GLOBAL_MIN_LIQUIDITY=1000
GLOBAL_MIN_VOLUME_24H=1000
GLOBAL_DIGEST_WINDOW=60
GLOBAL_MAX_ALERTS=7
PYES_ACTIONABLE_MIN=0.15
PYES_ACTIONABLE_MAX=0.85
MAX_ACTIONABLE_PER_DIGEST=5
DIGEST_ACTIONABLE_ONLY=true

# Auth + rate limit
DEFAULT_TENANT_ID=default
RATE_LIMIT_DEFAULT_PER_MIN=60

# Logging
LOG_LEVEL=INFO
LOG_JSON=true
